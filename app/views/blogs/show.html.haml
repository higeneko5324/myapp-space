.blog-show
  .blog-show-list
    .blog-title
      = @blog.title
    .blog-date
      = @blog.created_at.strftime("%Y年%m月%d日 %H時%M分")
      = link_to 'edit', class: "blog-edit-btn"
      = link_to 'delete' , class: "blog-delete-btn"
    .blog-author
      .blog-text
        = simple_format @blog.content
